<div class="row">
    <div class="twelve columns">
        <div class="tab-bar-container">
            <div class="row">
                <div class="button-row">
                    <span>
                        <a href="http://projects.dfid.gov.uk/iati/Country/<%= data["code"] %>" class="api-link">IATI Data Set</a>
                        <a href="/fraud?country=<%= data["name"] %>" class="button serious">Report Fraud</a>
                    </span>
                </div>

                <div class="projects-nav">
                    <nav>
                        <ul class="tab-bar">
                            <li <%= active=="summary" ? "class='active'" : ""%>><a href="/countries/<%= data["code"] %>">Summary</a></li>
                            <li <%= active=="projects" ? "class='active'" : ""%>><a href="/countries/<%= data["code"] %>/projects">All Projects (<%=data["projects"]["total"]%>)</a></li>
                            <% if data["has_results"] then %>
                                <li <%= active=="results" ? "class='active'" : ""%>><a href="/countries/<%= data["code"] %>/results">Results</a></li>
                            <% end %>
                        </ul>
                    </nav>
                </div>       
            </div>
        </div>
    </div>
</div>