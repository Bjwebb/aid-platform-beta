---
title: Aid Information Platform
---

<%= partial "partials/projects-header", :locals => { :project => project, :active => "documents", :has_funded_projects => has_funded_projects } %>

<div class="row">
    <div class="twelve columns">
      <h3 class="section-group-title">Project Documents</h3>
      <table style="border:0;">
        <tbody>
            <% documents.each do |document| %>
              <tr>
                <td>
                    <a href="<%=document['url']%>">
                      <%= document['title'].gsub(/\.[^.]*$/, '') %>
                    </a>
                </td>
                <td><%= mime_type document['format'] %></td>
                <td>
                  <% document['categories'].each do |category| %>
                    <span class="category">
                      <% if(category.equal?(document['categories'].last)) %>
                        <%= category %>
                      <% else %>
                        <%= category + " |" %>
                      <% end %>
                    </span>
                  <% end %>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
</div>