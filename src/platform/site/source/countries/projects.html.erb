<%= partial "partials/search-bar" %>
<%= partial "partials/countries-tabs", :locals => { :active => "projects", :code => country['code'], :project_count => projects.size } %>

<div class="row project-results">
    <div class="nine columns push-three">
        <% projects.each do |project| %>
            <div class="search-result">
                <input type="hidden" name="status" value="<%= activty_status(project['status']) %>">
                <input type="hidden" name="organizations" value="@results(i).get("organizations")">
                <input type="hidden" name="sectors" value="@results(i).get("sectors")"
                <input type="hidden" name="budget" value="@results(i).get("budget")">
                <h3>
                    <a href="/projects/<%=project['iatiId']%>">
                        <%=project['title']%> <small>[<%=project['iatiId']%>]</small></a>
                    </h3>
                <p class="budget">Budget: <em> <%= number_to_currency(project['totalBudget'], :unit=>"£", :precision => 0) %></em></p>
                <p class="budget" style="margin-top:-3px;">Status: <em><%= activity_status project['status']%></em></p>
                <p class="description"><%=project['description']%></p>
            </div>
        <% end %>
    </div>


