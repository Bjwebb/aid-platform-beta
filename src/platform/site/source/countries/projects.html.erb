---
title: Aid Information Platform
---

<header id="page-title" class="row">
    <div class="twelve columns">
        <img id="page-title-logo" src="/images/ukaid_logo.gif" alt="UK aid from the British people">
        <p style="margin-top:20px;">AID PLATFORM</p>
        <h1>
            <a href="/countries/<%= country['code'] %>"><img src="/images/flags/<%= country['code'].downcase%>.png" /></a>
            <%= country['name'] %>
        </h1>
        <span id="sectionFooter"><a href="/index.html">Home </a> > <a href="#"> <%= country['name'] %> </a></span>
  </div>
</header>

<%= partial "partials/search-bar" %>
<%= partial "partials/countries-tabs", :locals => { :active => "projects", :code => country['code'], :project_count => projects.size } %>

<div class="row">
    <div class="twelve columns">
        <% projects.each do |project| %>
            <div class="search-result">
                <h3>
                    <a href="/projects/<%=project['iatiId']%>">
                        <%=project['title']%> <small>[<%=project['iatiId']%>]</small></a>
                    </h3>
                <p class="budget">Budget: <em>Â£<%=project['totalBudget']%></em></p>
                <p class="budget" style="margin-top:-3px;">Status: <em><%= activity_status project['status']%></em></p>
                <p class="description"><%=project['description']%></p>
            </div>
        <% end %>
    </div>
</div>