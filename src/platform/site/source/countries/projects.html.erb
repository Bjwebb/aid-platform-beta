---
title: Aid Information Platform
---

<div id="page-title" class="row">
    <div class="twelve columns">
        <img src="/images/ukaid_logo.gif" alt="UK aid from the British people">
        <div>
            <h1>
                <span>Aid platform</span>
                <%= country['name'] %>
                <span><a href="/index.html">Home </a></span>
            </h1>
        </div>
    </div>
</div>

<%= partial "partials/search-bar" %>
<%= partial "partials/countries-tabs", :locals => { :active => "projects", :code => country['code'], :project_count => projects.size } %>

<div class="row">
    <div class="twelve columns">
        <% projects.each do |project| %>
            <div class="search-result">
                <h3>
                    <a href="/projects/<%=project['iatiId']%>">
                        <%=project['title']%> <small>[<%=project['iatiId']%>]</small></a>
                    </h3>
                <p class="budget">Budget: <em>Â£<%=project['totalBudget']%></em></p>
                <p class="budget" style="margin-top:-3px;">Status: <em><%= activity_status project['status']%></em></p>
                <p class="description"><%=project['description']%></p>
            </div>
        <% end %>
    </div>
</div>