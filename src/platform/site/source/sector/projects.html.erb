---
title: Aid Information Platform
---

<div id="page-title" class="row">
    <div class="twelve columns">
        <img src="/images/ukaid_logo.png" alt="UK aid from the British people">
        <div>
            <div class="breadcrumb">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/sector">Aid by Sector</a></li>
                    <li><a href="/sector/<%=sector['highLevelCode']%>"><%=sector['highLevelName']%></a></li>
                    <li><a href="/sector/<%=sector['highLevelCode']%>/categories/<%=sector['categoryCode']%>"><%=sector['categoryName']%></a></li>
                    <li><%= sector['sectorName'] %></li>
                </ul>
            </div>
            <h1>
                Aid by Sector
            </h1>
        </div>
    </div>
</div>


<div class="row">
    <div class="twelve columns">
        <% projects.each do |project| %>
            <div class="search-result">
                <h3>
                    <a href="/projects/<%=project['iatiId']%>">
                        <%=project['title']%> <small>[<%=project['iatiId']%>]</small></a>
                    </h3>
                <p class="budget">Budget: <em> <%= number_to_currency(project['totalBudget'], :unit=>"Â£", :precision => 0) %></em></p>
                <p class="budget" style="margin-top:-3px;">Status: <em><%= activity_status project['status']%></em></p>
                <p class="description"><%=project['description']%></p>
            </div>
        <% end %>
    </div>
</div>