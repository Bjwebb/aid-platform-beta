# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index
POST    /deploy                     @controllers.Application.deploy

# Organisations
GET     /organisations              @controllers.OrganisationSources.index
POST    /organisations              @controllers.OrganisationSources.save
POST    /organisations/refresh      @controllers.OrganisationSources.refresh

# Activities
GET     /activities                 @controllers.ActivitySources.index
POST    /activities                 @controllers.ActivitySources.save
POST    /activities/refresh         @controllers.ActivitySources.refresh

# Countries
GET     /countries                  @controllers.Countries.index
GET     /countries/new              @controllers.Countries.create
POST    /countries                  @controllers.Countries.save
GET     /countries/:id              @controllers.Countries.edit(id: String)
POST    /countries/:id              @controllers.Countries.update(id: String)
POST    /countries/:id/delete       @controllers.Countries.delete(id: String)

# What We Do
GET     /whatwedo                   @controllers.WhatWeDo.index
GET     /whatwedo/new               @controllers.WhatWeDo.create
POST    /whatwedo                   @controllers.WhatWeDo.save
GET     /whatwedo/:id               @controllers.WhatWeDo.edit(id: String)
POST    /whatwedo/:id               @controllers.WhatWeDo.update(id: String)
POST    /whatwedo/:id/delete        @controllers.WhatWeDo.delete(id: String)

# Auth
GET     /login                      @controllers.Authentication.login
POST    /login                      @controllers.Authentication.authenticate
GET     /logout                     @controllers.Authentication.logout

# WebJar route
GET     /webjars/*file              controllers.WebJars.at(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
