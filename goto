#!/bin/bash

if [[ ! ("$#" == 2) ]]; then
 echo "goto <(cms|site|api|ci|search)> <keyfile>"
 exit 1
fi

case $1 in
"cms"|"ci")
  ssh ubuntu@ec2-46-137-43-29.eu-west-1.compute.amazonaws.com -i $2
  ;;
"api"|"site")
  ssh ubuntu@ec2-46-137-43-29.eu-west-1.compute.amazonaws.com -i $2
  ;;
"dev")
  ssh ubuntu@ec2-54-247-7-93.eu-west-1.compute.amazonaws.com -i $2
  ;;
"dev2")
  ssh ubuntu@ec2-54-216-99-139.eu-west-1.compute.amazonaws.com -i $2
  ;;
*)
  echo "==================================="
  echo "  Unknown machine name "$1
  echo "==================================="
esac
